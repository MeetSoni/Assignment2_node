{{> header}}
<html>
  <body style="text-align:center;">
    <form method="POST" id="searchForm" action="/search/invoiceNo" style="background-color: white; color:green; width:50%; margin:auto; padding:50px; margin-top:100px; border:1px solid black">
      <h1>Search for InvoiceNo</h1>
      <input type="text" name="invoiceNo" id="invoiceNoInput" placeholder="Enter InvoiceNo" required>
      <input type="submit" value="Search">
    </form>
  </body>
</html>

<script>
  const searchForm = document.getElementById('searchForm');
  const invoiceNoInput = document.getElementById('invoiceNoInput');

  searchForm.addEventListener('submit', function (event) {
    event.preventDefault(); // Prevent the default form submission

    const inputValue = invoiceNoInput.value;
    const newAction = `/search/invoiceNo/${encodeURIComponent(inputValue)}`;
    searchForm.action = newAction;

    // Now, the form will submit to /kl?invoiceNo=<inputValue>
    searchForm.submit();
  });
</script>


